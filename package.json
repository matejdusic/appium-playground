{
  "name": "appium-playground",
  "version": "1.0.0",
  "description": "This project is a testing playground for mobile automation using Appium.",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "mocha -r ts-node/register --timeout 60000",
    "test:dialog": "mocha -r ts-node/register tests/dialog.test.ts --timeout 60000",
    "test:animation": "mocha -r ts-node/register tests/animation.test.ts --timeout 60000",
    "test:mainScreen": "mocha -r ts-node/register tests/mainScreen.test.ts --timeout 60000",
    "test:all": "mocha -r ts-node/register 'tests/**/*.ts' --timeout 60000",
    "test:defaultLayoutAnimations": "mocha -r ts-node/register tests/defaultLayoutAnimations.test.ts --timeout 60000"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "directories": {
    "test": "tests"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^22.10.5",
    "appium-uiautomator2-driver": "^3.9.7",
    "appium-xcuitest-driver": "^7.35.1",
    "chai": "^4.3.0",
    "mocha": "^9.2.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.0"
  },
  "dependencies": {
    "appium": "^2.14.1",
    "wd": "^1.14.0",
    "webdriverio": "^9.5.1"
  }
}
